package kr.bang.algorithm;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class Jangi {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		Queue<int[]> queue = new LinkedList<int[]>();//큐 생성
		int N, M;
		N = s.nextInt();
		M = s.nextInt();
		int[] current = new int[3];
		current[0] = s.nextInt();
		current[1] = s.nextInt();
		current[2] = 0;		
		int[] destination = new int[2];
		destination[0] = s.nextInt();
		destination[1] = s.nextInt();
		queue.offer(current);
		int[] wait = new int[3];
		// 함수는 똑같이 동작하도록 만들어놓고 위치와 실행 횟수를 같이 저장하는 큐를 만들자.
		while(true) {
			wait = queue.poll();
			//System.out.printf("[%d, %d, %d]",wait[0],wait[1],wait[2]);
			if(wait[0]==destination[0] && wait[1]==destination[1]) {
				System.out.println(wait[2]);
				break;
			}
			int[] copy = new int[3];
			if(wait[0]-1>0 && wait[1]-2>0) {
				copy[0] = wait[0]-1;
				copy[1] = wait[1]-2;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]-2>0 && wait[1]-1>0) {
				copy[0] = wait[0]-2;
				copy[1] = wait[1]-1;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]-2>0 && wait[1]+1<M+1) {
				copy[0] = wait[0]-2;
				copy[1] = wait[1]+1;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]-1>0 && wait[1]+2<M+1) {
				copy[0] = wait[0]-1;
				copy[1] = wait[1]+2;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]+1<N+1 && wait[1]+2<M+1) {
				copy[0] = wait[0]+1;
				copy[1] = wait[1]+2;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]+2<N+1 && wait[1]+1<M+1) {
				copy[0] = wait[0]+2;
				copy[1] = wait[1]+1;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]+2<N+1 && wait[1]-1>0) {
				copy[0] = wait[0]+2;
				copy[1] = wait[1]-1;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
			if(wait[0]+1>0 && wait[1]-2>0) {
				copy[0] = wait[0]+1;
				copy[1] = wait[1]-2;
				copy[2] = wait[2]+1;
				queue.offer(copy);
				System.out.printf("copy offered : [%d, %d, %d]\n",copy[0],copy[1],copy[2]);
			}
		}
		
	}
	
}
